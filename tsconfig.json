{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "outDir": "dist",
    "noImplicitReturns": true,
    "declaration": false,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "sourceMap": true
  },
  "exclude": ["**/node_modules", "**/dist", "**/__tests__/**"]
}
